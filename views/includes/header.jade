      a.navbar-brand(href="/") Flood warnings checker
    #navbar-collapse-1.collapse.navbar-collapse.in(ng-show="showMenu")
      ul.nav.navbar-nav
        li(class=(slug === 'warnings') ? 'active' : '')
          a(href="/warnings/") warnings

      ul.nav.navbar-nav.navbar-right
        li
          form.navbar-form(action="/search/" method="get")
            .input-group
              input(placeholder="Search" type="text" name="q" id="q" value=(query) ? query : '').form-control
              span.input-group-btn
                button(type="submit").btn.btn-sm.btn-default
                  span.glyphicon.glyphicon-search
